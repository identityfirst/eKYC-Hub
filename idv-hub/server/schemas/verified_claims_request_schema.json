{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://openid.net/schemas/verified_claims_request-11.json",
  "definitions": {
    "simple_element": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "essential": {
              "type": "boolean"
            },
            "purpose": {
              "type": "string" ,
              "minLength": 3 ,
              "maxLength": 300
            }
          }
        }
      ]
    },
    "constrainable_element": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "value": {
              "type": "string"
            },
            "values": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 1
            },
            "essential": {
              "type": "boolean"
            },
            "purpose": {
              "type": "string" ,
              "minLength": 3 ,
              "maxLength": 300
            }
          }
        }
      ]
    },
    "datetime_element": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "max_age": {
              "type": "integer",
              "minimum": 0
            },
            "essential": {
              "type": "boolean"
            },
            "purpose": {
              "type": "string" ,
              "minLength": 3 ,
              "maxLength": 300
            }
          }
        }
      ]
    },
    "evidence": {
      "type": "object",
      "properties": {
        "type": {
          "type": "object",
          "properties": {
            "value": {
              "enum": [
                "qes",
                "id_document",
                "utility_bill"
              ]
            }
          }
        }
      },
      "required": [
        "type"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "value": "qes"
              }
            }
          },
          "then": {
            "properties": {
              "issuer": {
                "$ref": "#/definitions/simple_element"
              },
              "serial_number": {
                "$ref": "#/definitions/simple_element"
              },
              "created_at": {
                "$ref": "#/definitions/datetime_element"
              }
            }
          },
          "else": {
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "value": "id_document"
              }
            }
          },
          "then": {
            "properties": {
              "method": {
                "$ref": "#/definitions/constrainable_element"
              },
              "verifier": {
                "type": "object",
                "properties": {
                  "organization": {
                    "$ref": "#/definitions/simple_element"
                  },
                  "txn": {
                    "$ref": "#/definitions/simple_element"
                  }
                }
              },
              "time": {
                "$ref": "#/definitions/datetime_element"
              },
              "document": {
                "type": "object",
                "properties": {
                  "type": {
                    "$ref": "#/definitions/constrainable_element"
                  },
                  "number": {
                    "$ref": "#/definitions/simple_element"
                  },
                  "issuer": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "$ref": "#/definitions/simple_element"
                      },
                      "country": {
                        "$ref": "#/definitions/simple_element"
                      }
                    }
                  },
                  "date_of_issuance": {
                    "$ref": "#/definitions/datetime_element"
                  },
                  "date_of_expiry": {
                    "$ref": "#/definitions/datetime_element"
                  }
                }
              }
            }
          },
          "else": {
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "value": "utility_bill"
              }
            }
          },
          "then": {
            "properties": {
              "provider": {
                "type": "object",
                "properties": {
                  "name": {
                    "$ref": "#/definitions/simple_element"
                  },
                  "formatted": {
                    "$ref": "#/definitions/simple_element"
                  },
                  "street_address": {
                    "$ref": "#/definitions/simple_element"
                  },
                  "locality": {
                    "$ref": "#/definitions/simple_element"
                  },
                  "region": {
                    "$ref": "#/definitions/simple_element"
                  },
                  "postal_code": {
                    "$ref": "#/definitions/simple_element"
                  },
                  "country": {
                    "$ref": "#/definitions/simple_element"
                  }
                }
              },
              "date": {
                "$ref": "#/definitions/datetime_element"
              }
            }
          },
          "else": {
          }
        }
      ]
    },
    "verified_claims": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "#/definitions/verified_claims_def"
              }
            ]
          }
        },
        {
          "$ref": "#/definitions/verified_claims_def"
        }
      ]
    },
    "verified_claims_def": {
      "type": "object",
      "properties": {
        "verification": {
          "type": "object",
          "properties": {
            "trust_framework": {
              "$ref": "#/definitions/constrainable_element"
            },
            "time": {
              "$ref": "#/definitions/datetime_element"
            },
            "verification_process": {
              "$ref": "#/definitions/simple_element"
            },
            "evidence": {
              "type": "array",
              "minItems": 1,
              "items": {
                "oneOf": [
                  {
                    "$ref": "#/definitions/evidence"
                  }
                ]
              }
            }
          },
          "required": [
            "trust_framework"
          ],
          "additionalProperties": false
        },
        "claims": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "anyOf":[
              {"type": "null"},
              {
                "type": "object",
                "properties": {
                  "essential": {
                    "type": "boolean"
                  },
                  "purpose": {
                    "type": "string" ,
                    "minLength": 3 ,
                    "maxLength": 300
                  }
                }
              }
            ]
          }
        }
      },
      "required": [
        "verification",
        "claims"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "userinfo": {
      "type": "object",
      "properties": {
        "verified_claims": {
          "$ref": "#/definitions/verified_claims"
        }
      }
    },
    "id_token": {
      "type": "object",
      "properties": {
        "verified_claims": {
          "$ref": "#/definitions/verified_claims"
        }
      }
    }
  },
  "additionalProperties": false
}
